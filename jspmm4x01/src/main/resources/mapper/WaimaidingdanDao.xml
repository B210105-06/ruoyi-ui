        <result property="dingdanbianhao" column="dingdanbianhao"/>
        <result property="caipinmingcheng" column="caipinmingcheng"/>
        <result property="danjia" column="danjia"/>
        <result property="shuliang" column="shuliang"/>
        <result property="zongjine" column="zongjine"/>
        <result property="dingdanzhuangtai" column="dingdanzhuangtai"/>
        <result property="wanchengshijian" column="wanchengshijian"/>
        <result property="dizhi" column="dizhi"/>
        <result property="beizhu" column="beizhu"/>
        <result property="zhanghao" column="zhanghao"/>
        <result property="xingming" column="xingming"/>
        <result property="shouji" column="shouji"/>
        <result property="qishouzhanghao" column="qishouzhanghao"/>
        <result property="qishouxingming" column="qishouxingming"/>
        <result property="lianxidianhua" column="lianxidianhua"/>
        <result property="sfsh" column="sfsh"/>
